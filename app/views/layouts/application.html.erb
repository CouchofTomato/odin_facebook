<!DOCTYPE html>
<html>
  <head>
    <title>OdinFace</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <div>
      <% if user_signed_in? %>
          Signed in as <strong><%= current_user.first %></strong>
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to "Sign In", destroy_user_session_path %> or <%= link_to "Sign Up", new_user_registration_path %>
      <% end %>
      </div>
      
     <div class="container">
        <% flash.each do |message_type, message | %>
        <%= content_tag(:div, message, class: "alert alert-#{message_type}") %></div>
    <% end %>
    <%= yield %>
  </body>
</html>
