<h1>TOPbook Users</h1>

<ul>
<% @users.each do |user| %>

<li>
    <%= link_to user.username, user_path(user) %>
    <% unless current_user == user || current_user.friends.include?(user) %>
      <%= link_to "Add friend", friendships_path(friend_id: user.id), method: :post %>
    <% end %>
</li>

<% end %>
</ul>

